<%= render "shared/header" %>

<div id="container">
  <nav id="menubar">
    <ul>
      <li><%= link_to 'Top', articles_path %></li>
      <li><%= link_to 'ログイン', articles_path %></li>
      <li><%= link_to '新規登録', articles_path %></li>
    </ul>
  </nav>

  <div id="contents">
    <section>
      <h2>GALLERY</h2>
      <% @articles.each do |article| %>
        <div class="list">
          <%# link_to good_path(good.id), method: :get do %>
            <%= image_tag article.image %>
            <h4><%= article.title %></h4>
            <p>掛かった金額：<%= article.price %></p>
            <p><%= article.text %></p>
          <%# end %>
        </div>
      <% end %>
    </section>
  </div>
</div>

<%= render "shared/footer" %>